<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LookupServlet</servlet-name>
        <servlet-class>LookupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LookupServlet</servlet-name>
        <url-pattern>/LookupServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>SimpleSLSBean1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local-home/>
        <local>com.simple.SimpleSLSBeanLocal</local>
        <ejb-link>SimpleSLSBean1</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>SimpleSLSBean2</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local-home/>
        <local>com.simple.SimpleSLSBeanLocal</local>
        <ejb-link>SimpleSLSBean2</ejb-link>
    </ejb-local-ref>
</web-app>
